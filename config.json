{
    "name": "cartoon-interpolation",
    "n_gpu": 1,

    "arch": {
        "type": "CycleSepConv",
        "args": {
            "kernel_size": 31
        }
    },
    "data_loader": {
        "type": "DD40DataLoader",
        "args":{
            "data_dir": "data/dataset-simpsons/",
            "dataset_csv": "dataset.csv",
            "batch_size": 6,
            "shuffle": true,
            "validation_split": 0.25,
            "num_workers": 4
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": 0.0001,
            "weight_decay": 0,
            "amsgrad": true
        }
    },
    "loss": {
        "type": "cycle_consistency_loss",
        "args": {
            "alphas": [1, 0.1, 1],
            "beta": 1,
            "gamma": 1
        }
    },
    "metrics": [
        "psnr"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 50,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": 100,

        "save_dir": "saved/",
        "save_period": 1,
        "verbosity": 2,
        "log_step": 10,
        "monitor": "min val_loss",
        "early_stop": 10,

        "tensorboard": true
    }
}
